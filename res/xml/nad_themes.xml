<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
            android:title="@string/themes_title" >

    <!-- Font style -->
    <Preference
        android:key="android.theme.customization.fonts"
        android:title="@string/theme_customization_font_title"
        android:summary="@string/theme_customization_font_summary"
        android:fragment="com.nusantara.wings.fragments.system.FontsPicker"/>

    <!-- Icon pack -->
    <Preference
        android:key="android.theme.customization.icon_pack"
        android:title="@string/theme_customization_icon_pack_title"
        android:summary="@string/theme_customization_icon_pack_summary"
        android:fragment="com.nusantara.wings.fragments.system.StatusbarIcons"/>

    <!-- Adaptive icon pack -->
    <Preference
        android:key="android.theme.customization.adaptive_icon_shape"
        android:title="@string/theme_customization_icon_shape_title"
        android:summary="@string/theme_customization_icon_shape_summary"
        android:fragment="com.nusantara.wings.fragments.system.IconShapes"/>

    <!-- Navbar Style -->
    <Preference
        android:key="android.theme.customization.navbar"
        android:title="@string/theme_customization_navbar_title"
        android:summary="@string/theme_customization_navbar_summary"
        android:fragment="com.nusantara.wings.fragments.system.NavbarStyles"/>

    <Preference
        android:key="monet_engine"
        android:title="@string/monet_engine_title"
        android:summary="@string/monet_engine_summary"
        android:fragment="com.nusantara.wings.fragments.system.MonetEngine"/>
    
    <com.nusantara.support.preferences.SecureSettingSwitchPreference
        android:key="system_black_theme"
        android:title="@string/system_black_theme_title"
        android:summary="@string/system_black_theme_summary"
        android:defaultValue="false" />
        
    <com.nusantara.support.preferences.SecureSettingSwitchPreference
        android:key="nusantara_clear_theme"
        android:title="@string/nusantara_clear_theme_title"
        android:summary="@string/nusantara_clear_theme_summary"
        android:defaultValue="false" />

</PreferenceScreen>
