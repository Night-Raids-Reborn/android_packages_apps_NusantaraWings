<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
            android:title="@string/themes_title" >

    <PreferenceCategory
        android:key="system_category"
        android:title="NusantaraWings Interface">

        <com.nusantara.support.preferences.SystemSettingListPreference
            android:key="nusantara_wings_style"
            android:title="@string/nad_style_title"
            android:entries="@array/nad_style_color_entries"
            android:entryValues="@array/nad_style_color_values"
            android:summary="%s"
            android:defaultValue="0" />

        <com.nusantara.support.preferences.SystemSettingListPreference
            android:key="cat_nusantara"
            android:title="@string/nusantara_cat_style_title"
            android:entries="@array/nad_style_cat_entries"
            android:entryValues="@array/nad_style_cat_values"
            android:summary="%s"
            android:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="monel_category"
        android:title="Monet">

        <com.nusantara.support.preferences.SecureSettingSwitchPreference
            android:key="monet_engine_custom_color"
            android:title="@string/monet_engine_custom_color_title"
            android:summary="@string/monet_engine_custom_color_summary"
            android:defaultValue="false" />

        <com.nusantara.support.colorpicker.ColorPickerPreference
            android:key="monet_engine_color_override"
            android:title="@string/monet_engine_color_override_title"
            android:dependency="monet_engine_custom_color"
            android:defaultValue="0xffffff" />

        <com.nusantara.support.preferences.SecureSettingSeekBarPreference
            android:key="monet_engine_white_luminance_user"
            android:title="@string/monet_engine_white_luminance_user_title"
            android:defaultValue="425"
            android:max="1000"
            settings:min="200"
            settings:interval="100"/>

        <com.nusantara.support.preferences.SecureSettingSwitchPreference
            android:key="monet_engine_accurate_shades"
            android:title="@string/monet_engine_accurate_shades_title"
            android:defaultValue="true" />

        <com.nusantara.support.preferences.SecureSettingSeekBarPreference
            android:key="monet_engine_chroma_factor"
            android:title="@string/monet_engine_chroma_factor_title"
            android:defaultValue="100"
            android:max="400"
            settings:min="50"
            settings:interval="50"/>

        <com.nusantara.support.preferences.SecureSettingSwitchPreference
            android:key="monet_engine_linear_lightness"
            android:title="@string/monet_engine_linear_lightness_title"
            android:defaultValue="false" />

    </PreferenceCategory>
</PreferenceScreen>
