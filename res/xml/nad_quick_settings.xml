<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
            android:title="@string/quicksettings_title" >

    <com.nusantara.support.preferences.SystemSettingSwitchPreference
        android:key="secure_lockscreen_qs_disabled"
        android:title="@string/disable_qs_title"
        android:summary="@string/disable_qs_summary"
        android:defaultValue="false" />

    <com.nusantara.support.preferences.SystemSettingSwitchPreference
        android:key="notification_material_dismiss"
        android:title="@string/enable_clear_all_button"
        android:summary="@string/enable_clear_all_button_summary"
        android:defaultValue="false" />

    <PreferenceCategory
        android:key="quick_settings_vibration"
        android:title="@string/qs_tile_vibration_title" >

        <com.nusantara.support.preferences.SecureSettingSwitchPreference
            android:key="quick_settings_vibrate"
            android:title="@string/quick_settings_vibrate_title"
            android:summary="@string/quick_settings_vibrate_summary"
            android:defaultValue="false"/>

        <com.nusantara.support.preferences.SecureSettingSeekBarPreference
            android:key="quick_settings_vibrate_duration"
            android:title="@string/quick_settings_vibrate_duration_title"
            android:summary="@string/quick_settings_vibrate_duration_summary"
            android:max="200"
            settings:min="10"
            android:defaultValue="45"
            android:dependency="quick_settings_vibrate" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="qs_footer"
        android:title="@string/qs_footer_title" >

        <com.nusantara.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_text_show"
            android:title="@string/qs_footer_text_title"
            android:summary="@string/qs_footer_text_summary"
            android:defaultValue="false"/>

        <com.nusantara.support.preferences.SystemSettingEditTextPreference
            android:key="qs_footer_text_string"
            android:title="@string/qs_footer_text_string_title"
            android:summary="@string/qs_footer_text_string_summary"
            android:dependency="qs_footer_text_show"
            android:defaultValue="#Nusantara Project" />

        <com.nusantara.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_services_show"
            android:title="@string/qs_footer_running_services_title"
            android:summary="@string/qs_footer_running_services_summary"
            android:defaultValue="false" />

        <com.nusantara.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_data_usage"
            android:title="@string/qs_footer_datausage_title"
            android:summary="@string/qs_footer_datausage_summary"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_brightness_slider_category">

        <com.nusantara.support.preferences.SystemSettingListPreference
            android:key="brightness_slider_position"
            android:title="@string/qs_brightness_slider_position_title"
            android:summary="%s"
            android:entries="@array/brightness_slider_position_entries"
            android:entryValues="@array/brightness_slider_position_values"
            android:defaultValue="0" />

        <com.nusantara.support.preferences.SystemSettingSwitchPreference
            android:key="qqs_show_brightness"
            android:title="@string/qqs_brightness_slider_title"
            android:summary="@string/qqs_brightness_slider_summary"
            android:defaultValue="false" />

        <com.nusantara.support.preferences.SystemSettingSwitchPreference
            android:key="show_auto_brightness_button"
            android:title="@string/qs_brightness_icon_title"
            android:summary="@string/qs_brightness_icon_summary"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>
